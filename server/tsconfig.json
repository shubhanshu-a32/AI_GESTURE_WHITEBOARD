{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
